<!DOCTYPE html>
<html>
  <head>
    <title>Netdpl</title>
    <%= csrf_meta_tags %>

  </head>

  <body>
    <div id="user_header">
      <% if logged_in? %>
        <%= link_to 'Logout', logout_path %>
      <% else %>
        <%= link_to 'Sign Up', signup_path %>
        <%= link_to 'Log In', login_path %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
